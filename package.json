    "build": {
        "productName": "Solar Desktop Wallet",
        "appId": "org.solar.desktop-wallet",
        "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
        "afterSign": "scripts/notarize.js",
        "buildDependenciesFromSource": true,
        "npmRebuild": false,
        "publish": {
            "provider": "github",
            "vPrefixedTagName": false
        },
        "extraResources": [
            "app-update.yml"
        ],
        "protocols": {
            "name": "SXP URI scheme",
            "schemes": [
                "sxp"
            ],
            "role": "Viewer"
        },
        "directories": {
            "output": "build/target"
        },
        "files": [
            "dist/electron/**/*"
        ],
        "mac": {
            "category": "public.app-category.finance",
            "icon": "build/icons/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "asarUnpack": [
                "**/*.node"
            ],
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icons/icon.ico"
        },
        "linux": {
            "category": "Utility",
            "icon": "build/icons",
            "target": [
                "AppImage",
                "deb",
                "tar.gz",
                "snap"
            ],
            "desktop": {
                "MimeType": "x-scheme-handler/sxp;"
            }
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3",
                "libudev-dev"
            ]
        },
        "dmg": {
            "icon": "build/icons/icon.icns"
        },
        "nsis": {
            "perMachine": true,
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
